<% content_for(:noindex) do %>
<meta name="robots" content="noindex">
<% end %>

<h4 class="new-session-h4">Connectez-vous pour continuer</h4>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <div class="facebook-block">
      <%= link_to "Connexion avec #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "facebook-button" %>
    </div>
  <% end -%>
<% end -%>

<hr>
<h4 class="facebook-separator">Ou connexion avec votre email :</h4>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, :label => 'Mot de passe', required: false %>
    <%= f.input :remember_me, :label => 'Se souvenir de moi', as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Se connecter", class: "btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
